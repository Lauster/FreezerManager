<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="de.geek_hub.freezermanager.ItemDetailActivity"
    tools:showIn="@layout/activity_item_detail">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:orientation="horizontal"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/item_detail_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/item_detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text=""/>

        <TextView
            android:id="@+id/item_detail_freeze_date_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="@string/item_detail_freeze_date" />
        <TextView
            android:id="@+id/item_detail_freeze_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:id="@+id/item_detail_exp_date_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="@string/item_detail_exp_date" />
        <TextView
            android:id="@+id/item_detail_exp_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:id="@+id/item_detail_section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="@string/item_detail_section" />
        <TextView
            android:id="@+id/item_detail_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="" />

        <TextView
            android:id="@+id/item_detail_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/text_margin"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="@string/item_detail_category" />
        <TextView
            android:id="@+id/item_detail_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/text_margin"
            android:textSize="18sp"
            android:text="" />

    </GridLayout>

</android.support.v4.widget.NestedScrollView>
